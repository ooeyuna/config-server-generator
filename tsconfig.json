{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "alwaysStrict": true,
    "preserveSymlinks": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types" : ["node"]
  },
  "include": [
    "./src/**/*",
    "./node_modules/@types/**/index.d.ts"
  ]
}
